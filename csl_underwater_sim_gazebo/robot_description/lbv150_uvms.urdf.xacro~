    	</inertial>
    	
    	<buoyancy>
         <compensation>1.0</compensation>
         <origin xyz="0 0 0"/>
         <limit radius=".5"/>
         <damping xyz="60 100 100" rpy="20 50 50"/>
      </buoyancy>
