  <node name="rviz" pkg="rviz" type="rviz" args="-d $(arg rvizconfig)" required="true" />
  
  
  <node pkg="tf" type="static_transform_publisher" name="uvms_tf" args="-1 0 1 0 0 3.14159  /base_link /world 100"/> 

